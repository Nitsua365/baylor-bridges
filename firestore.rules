rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{user} {
      allow write, read: 
        if isSignedIn() && isUser(user);
    }

    match /users {
      allow read:
        if isSignedIn();
    }

    function isSignedIn() {
      return request.auth != null && request.auth.uid != null;
    }

    function isUser(uid) {
      return request.auth.uid == uid;
    }
  }
}